#! /bin/sh
# postinst script for #PACKAGE#
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package
#

PRIORITY=100
TARGET=/usr/share/icons/default/index.theme
ICONDIR=/etc/X11/cursors
THEMES="Bread \
    Breeze \
    Breeze_Amber \
    Breeze_Blue \
    Breeze_Contrast \
    Breeze_Golgari \
    Breeze_Hacked \
    Breeze_Huayra \
    Breeze_Obsidian \
    Breeze_Purple \
    Breeze_Red \
    Breeze_Snow"

case "$1" in
    configure)
	for theme in $THEMES; 
	do
            if ! update-alternatives --list x-cursor-theme |grep -q ${theme}.theme; then
                update-alternatives --install $TARGET x-cursor-theme ${ICONDIR}/${theme}.theme $PRIORITY
            fi
	done
    update-alternatives --set x-cursor-theme ${ICONDIR}/Breeze_Huayra.theme
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)

    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
